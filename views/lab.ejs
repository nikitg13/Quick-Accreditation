<% layout('partials/userProfile') %>

  <h2>Laboratory Information</h2>
  <br>
  <form class="" action="/labform" method="post">


    <h4>Adequate and well equipped laboratories, and technical manpower</h4>

    <table class="table">
      <tr>
        <td>
          <p class="lead">Laboratory Name</p>
        </td>
        <td>
          <input class="text-field" type="text" name="name" required>
        </td>
      </tr>

      <tr>
        <td>
          <p class="lead">Number of Students Per Setup</p>
        </td>
        <td>
          <input class="text-field" type="number" name="numberOfStudent" required>
        </td>
      </tr>

      <tr>
        <td>
          <p class="lead">Name of the Important Equipment</p>
        </td>
        <td>
          <input class="text-field" type="text" name="nameofEquipments" required>
        </td>
      </tr>

      <tr>
        <td>
          <p class="lead">Name of the Technical Staff</p>
        </td>
        <td>
          <input class="text-field" type="text" name="nameOfStaff" required>
        </td>
      </tr>

      <tr>
        <td>
          <p class="lead">Staff Designation</p>
        </td>
        <td>
          <input class="text-field" type="text" name="Designation" required>
        </td>
      </tr>

      <tr>
        <td>
          <p class="lead">Staff Qualification</p>
        </td>
        <td>
          <input class="text-field" type="text" name="Qualification" required>
        </td>
      </tr>

      <tr>
        <td>
          <p class="lead">Weekly Utilization Status</p>
        </td>
        <td>
          <input class="text-field" type="number" name="weeklyStatus" required>
        </td>
      </tr>

    </table>

