  <br>


  <table class="table table-light table-bordered">
    <thead>
      <tr class="table-secondary">
        <th scope="col">Name</th>
        <th scope="col">Number of Student</th>
        <th scope="col">Name of equipments</th>
        <th scope="col">Name of Staff</th>
        <th scope="col">Designation</th>
        <th scope="col">Qualification</th>
        <th scope="col">Weekly Status</th>
      </tr>
    </thead>
    <% for(let labs of user.lab){%>
      <tbody>
        <tr>

          <td>
            <%=labs.name %>
          </td>
          <td>
            <%=labs.numberOfStudent%>
          </td>
          <td>
            <%=labs.nameofEquipments%>
          </td>
          <td>
            <%=labs.nameOfStaff %>
          </td>
          <td>
            <%=labs.Designation %>
          </td>
          <td>
            <%=labs.Qualification %>
          </td>
          <td>
            <%=labs.weeklyStatus %>
          </td>
        </tr>

      </tbody>
      <%}%>
  </table>