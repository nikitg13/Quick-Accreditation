        <form class="" action="/registerForm" method="post">


            <h4>Institution Information</h4>

            <table class="table">

                <tr>
                    <td>
                        <p class="lead">Name of the Institution</p>
                    </td>
                    <td>
                        <input class="text-field" type="text" name="name" required>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p class="lead">Address of the Institution</p>
                    </td>
                    <td>
                        <input class="text-field" type="text" name="address" required>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p class="lead">Name of the Affiliating University</p>
                    </td>
                    <td>
                        <input class="text-field" type="text" name="university" required>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p class="lead">Year of establishment of the Institution</p>
                    </td>
                    <td>
                        <input class="text-field" type="number" name="estYear" required>
                    </td>
                </tr>

            </table>

