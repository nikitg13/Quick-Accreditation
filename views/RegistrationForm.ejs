            <h4>Type of Institution and Ownership Status</h4>

            <table class="table">
                <tr>
                    <td>
                        <p class="lead">Select Your Institution's Type</p>
                    </td>
                    <td>
                        <select name="institutionalType" style="width: 400px;" required>
                            <option>Select</option>
                            <option value="Institute of National Importance">Institute of National Importance</option>
                            <option value="University"> University</option>
                            <option value="Deemed University"> Deemed University</option>
                            <option value="Autonomous">Autonomous</option>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td>
                        <p class="lead">Select Your Institution's Ownership Status</p>
                    </td>
                    <td>
                        <select name="ownershipStatus" style="width: 400px;" required>
                            <option>Select</option>
                            <option value="Central Government"> Central Government</option>
                            <option value="State Government">State Government</option>
                            <option value="Government aided"> Government aided</option>
                            <option value="Self-financing"> Self-financing</option>
                            <option value="Trust">Trust</option>
                            <option value="Society">Society</option>
                            <option value="Section 25 Company">Section 25 Company</option>
                        </select>
                    </td>
                </tr>

            </table>

